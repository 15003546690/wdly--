.box{
  width: 100%;
  height: auto;
  background: #eee;
  overflow: hidden;
}
.wdly-banner{
  width: 100%;
}
.wdly-swiper{
  width: 100%;
}
.wdly-swiper image{
  width: 100%;
}
.wdly-center{
  width: 100%;
  background: #fff;
  margin-top: 5px;
  height: 122px;
  
}
.wdly-center .center-left{
  width: 35%;
  border-right: solid 1px #ddd8ce;
  padding: 8px;
  text-align: center;
  float: left;
  max-height: 105px;
}
.wdly-center .center-left .center-left-text1{
  display: block;
  color:#55a40f;
  line-height: 20px;
  font-weight: bold;
  font-size: 36rpx;
}
.wdly-center .center-left .center-left-text2{
  display: block;
  color:#666;
  line-height: 20px;
  font-size: 26rpx;
}
.wdly-center .center-left .center-left-img{
  width: 130rpx;
  height: 130rpx;
}
.wdly-center .center-left .center-left-img image{
  display: block;
  margin: 0 auto;
  width: 100%;
  height: 100%;
  margin-left: 30px;
}
.wdly-center .center-right{
  width: 59%;
  float: right;
}
.wdly-center .center-right-top{
  width: 100%;
  height: 50%;
  border-bottom: solid 1px #ddd8ce;
  padding: 10px;
  position: relative;
}
.wdly-center .center-right-top .center-right-text1{
  display: block;
  width: 50%;
  color:#ff3f0d;
  line-height: 20px;
  font-weight: bold;
  font-size: 36rpx;
}
.wdly-center .center-right-top .center-right-text2{
  display: block;
  color:#666;
  line-height: 20px;
  font-size: 26rpx;
}
.wdly-center .center-right-top .center-right-img{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 55rpx;
  top: 12rpx;
}
.wdly-center .center-right-top .center-right-img image{
  width: 90%;
  height: 90%;
 
}
.wdly-like{
  margin-top: 5px;
  background: #fff;
}
.wdly-like .wdly-like-title{
  font-size: 30rpx;
  display: block;
  color: #666;
  line-height: 60rpx;
  padding: 0 10rpx;
  border-bottom: solid 1px #ddd8ce;
  margin-left: 20rpx;
}
.wdly-like .wdly-list{
  display: flex;
  margin-left: 20rpx;
  width: 100%;
  height: 150rpx;
  border-bottom: solid 1px #ddd8ce;
  padding: 20rpx;
}
.wdly-like .wdly-list .wdly-list-img{
  width: 150rpx;
  height: 150rpx
}
.wdly-like .wdly-list .wdly-list-img image{
  width: 100%;
  height: 100%;
}
.wdly-like .wdly-list .wdly-list-content{
  width: 100%;
  margin-left: 36rpx;
}
.wdly-like .wdly-list .wdly-list-content .wdly-list-text1{
  width: 100%;
  display: block;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #666;
  margin-top: 10rpm
}
.wdly-like .wdly-list .wdly-list-content .wdly-list-text2{
  width: 100%;
  display: block;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #666;
}
.wdly-like .wdly-list .wdly-list-content .wdly-list-text3{
  width: 100%;
  margin-top: 20rpx;
}
.wdly-like .wdly-list .wdly-list-content .wdly-list-text3 .wdly-list-text3-1{
  color: #06c1ae
}
.wdly-like .wdly-list .wdly-list-content .wdly-list-text3 .wdly-list-text3-2{
  color: #666;
  font-size: 25rpx;
  margin-left: 20rpx;
}